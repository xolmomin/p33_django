python3 manage.py makemigrations # migratsiya fayllarini yaratish
python3 manage.py migrate # migratsiya fayllarni database ga yozish
python3 manage.py runserver # projectni run qilish
python3 manage.py createsuperuser # admin userni yaratish
python3 manage.py changepassword # userni parolini almashtirish

