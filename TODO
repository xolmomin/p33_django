docker commands
docker run --name postgres_container -e POSTGRES_PASSWORD=1 -p 5432:5432 -d postgres:alpine
docker run --name redis_container -p 6379:6379 -d redis:alpine

docker exec -it container_id yoki container_name (sh, bash, python, redis, psql)

docker exec -itu postgres container_id yoki container_name (sh, bash, python, redis, psql)
docker exec -itu postgres my_postgres psql
docker exec -itu postgres my_postgres psql -c "drop database valijon_db"


